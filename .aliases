#!/usr/bin/env bash
alias grep='grep --color=auto'

if [[ $OSTYPE == darwin* ]]; then
    alias ls='ls -G'
else
    alias ls='ls --color=auto'
fi

alias ll='ls -lrth'
alias la='ls -lrthA'
alias l='ls -CF'
alias tmux="tmux -u"
alias vim="nvim"
alias D="export DISPLAY=:0"
alias ff="fzf-tmux"
alias fv='vim $(fzf --preview "bat --color \"always\" {}")'
alias v='fzf --preview "bat --color \"always\" {}"'
